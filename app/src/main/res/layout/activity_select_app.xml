<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context="app.portfolio.davibrg.com.myappportfolio.SelectAppActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/my_nanodegree_apps"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/popular_movies"
            android:id="@+id/button"
            android:layout_below="@+id/textView"
            style="@style/MyButtonStyle" />

        <Button
            android:text="@string/stock_hawk"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            style="@style/MyButtonStyle" />

        <Button
            android:text="@string/build_it_bigger"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            style="@style/MyButtonStyle" />

        <Button
            android:text="@string/make_your_app_material"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            style="@style/MyButtonStyle" />

        <Button
            android:text="@string/go_ubiquitous"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            style="@style/MyButtonStyle" />

        <Button
            android:text="@string/capstone"
            android:id="@+id/button6"
            android:layout_below="@+id/button5"
            style="@style/MyButtonStyle" />


    </RelativeLayout>
</ScrollView>

